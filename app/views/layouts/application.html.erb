  	<title><%= content_for?(:title) ? yield(:title) : "jon+joanne" %></title>

    <%= favicon_link_tag "favicon.ico" %>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
